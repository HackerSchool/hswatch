<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MenuLateral" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/menu_lateral</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme.NoActionBar" >
        <item name="android:background">@color/HS_Circ_1</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Cor dos subtextos nas opçãos -->
        <item name="android:textColorSecondary">@color/Texto_Opcao</item>
        <!-- Cor dos titulos nos blocos das preferencias-->
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:background">@color/HS_Circ_5</item>
    </style>

</resources>