<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="match_parent"
    android:layout_height="wrap_content"                        android:orientation="horizontal"
    android:background="@drawable/costumbox"                    android:layout_marginBottom="12dp"
    android:layout_marginEnd="12dp"                             android:layout_marginStart="12dp"
    android:elevation="10dp">
    <ImageView
        android:id="@+id/op_simb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_bluetooth_black_24dp"
        android:padding="12dp"
        />
    <TextView
        android:id="@+id/op_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Algo"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        />
</androidx.appcompat.widget.LinearLayoutCompat>