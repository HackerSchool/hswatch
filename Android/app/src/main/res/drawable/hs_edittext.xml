<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/HS_Circ_5"/>
            <corners android:radius="@dimen/edittext_corner_radius"/>
            <stroke android:width="@dimen/edittext_corner_width" android:color="@color/HS_Circ_1"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/HS_Circ_5"/>
            <corners android:radius="@dimen/edittext_corner_radius"/>
            <stroke android:width="@dimen/edittext_corner_width" android:color="@android:color/darker_gray"/>
        </shape>
    </item>

</selector>